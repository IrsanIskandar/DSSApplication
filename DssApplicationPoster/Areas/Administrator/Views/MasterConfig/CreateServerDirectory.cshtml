
@{
    ViewData["Title"] = "Create Server Directory";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb bc-3">
    <li>
        <a asp-area="Administrator" asp-controller="Dashboard" asp-action="Home">
            <i class="entypo-home"></i>
            Dashboard
        </a>
    </li>
    <li><i class="entypo-book"></i>Master Config</li>
    <li class="active"><i class="entypo-folder"></i>Create Server Directory</li>
</ol>

<h1>Create Server Directory</h1>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary" data-collapsed="false">
            <div class="panel-heading">
                <div class="panel-title">
                    Create Server Directory
                </div>

                <div class="panel-options">
                    <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
                </div>
            </div>

            <div class="panel-body">
                <form role="form" class="form-horizontal form-groups-bordered" id="formCreateDirectoryServer" name="formCreateDirectoryServer">
                    <div class="form-group">
                        <label for="field-1" class="col-sm-3 control-label">Parent Path Directory</label>

                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="field-1" name="field-1" placeholder="Parent Path">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="field-2" class="col-sm-3 control-label">Path Directory</label>

                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="field-2" name="field-2" placeholder="Seconds Path">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="button" id="btnSave" name="btnSave" class="btn btn-primary">Save Path</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        var neonCreateServerDirectory = neonCreateServerDirectory || {};

        ; (function ($, window, undefined) {
            "use strict";
            neonCreateServerDirectory.$body = $('body');

            $(document).ready(function (e) {
                $('#btnSave').click(function (e) {
                    setTimeout(function (e) {
                        let opts = {
                            "closeButton": true,
                            "debug": false,
                            "positionClass": rtl() || neonCreateServerDirectory.$body.hasClass('form-horizontal') ? "toast-top-left" : "toast-top-right",
                            "toastClass": "red",
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        };

                        toastr.warning("This feature is still under development.", "Warning!", opts);
                    }, 5000);
                });
            });

        })(jQuery, window);
        
    </script>
}
